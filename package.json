{
  "name": "@postanu/eslint-config",
  "version": "7.0.0",
  "description": "ESLint shareable config for Postanu",
  "author": "Eduard Aksamitov <e@euaaaio.ru>",
  "license": "MIT",
  "homepage": "https://postanu.com/",
  "repository": "postanu/eslint-config",
  "type": "module",
  "packageManager": "pnpm@10.10.0",
  "exports": {
    ".": "./src/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "pnpx @eslint/config-inspector --config eslint.config.js"
  },
  "dependencies": {
    "@eslint/js": "^9.27.0",
    "@stylistic/eslint-plugin": "^4.4.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import-x": "^4.13.3",
    "eslint-plugin-n": "^17.18.0",
    "eslint-plugin-perfectionist": "^4.13.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-vue": "^10.1.0",
    "globals": "^16.2.0"
  },
  "peerDependencies": {
    "eslint": ">=9.27.0",
    "typescript": ">=5.8.3"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "eslint": "^9.27.0",
    "typescript": "^5.8.3",
    "vue": "^3.5.15"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint"
      ]
    }
  }
}
