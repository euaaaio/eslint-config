{
  "name": "@euaaaio/eslint-config",
  "version": "8.0.1",
  "description": "Opinionated and flexible ESLint shareable config for @euaaaio",
  "author": "Eduard Aksamitov <e@euaaaio.ru>",
  "license": "MIT",
  "homepage": "https://eslint-config.euaaaio.ru/",
  "repository": "euaaaio/eslint-config",
  "type": "module",
  "scripts": {
    "dev": "pnpx @eslint/config-inspector --config eslint.config.js",
    "test:lint": "oxlint . && eslint .",
    "build": "pnpx @eslint/config-inspector build --outDir dist",
    "typegen": "tsx scripts/typegen.ts",
    "oxgen": "tsx scripts/oxgen.ts"
  },
  "exports": {
    ".": "./src/index.js",
    "./package.json": "./package.json"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": "^20.0.0 || >=22.0.0"
  },
  "peerDependencies": {
    "eslint": ">=9.27.0",
    "typescript": ">=5.8.3"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@eslint/js": "catalog:plugins",
    "@stylistic/eslint-plugin": "catalog:plugins",
    "@typescript-eslint/eslint-plugin": "catalog:plugins",
    "@typescript-eslint/parser": "catalog:plugins",
    "@vitest/eslint-plugin": "catalog:plugins",
    "eslint-config-flat-gitignore": "catalog:plugins",
    "eslint-config-prettier": "catalog:plugins",
    "eslint-plugin-de-morgan": "catalog:plugins",
    "eslint-plugin-import-x": "catalog:plugins",
    "eslint-plugin-n": "catalog:plugins",
    "eslint-plugin-oxlint": "catalog:plugins",
    "eslint-plugin-perfectionist": "catalog:plugins",
    "eslint-plugin-prettier": "catalog:plugins",
    "eslint-plugin-promise": "catalog:plugins",
    "eslint-plugin-unicorn": "catalog:plugins",
    "eslint-plugin-vue": "catalog:plugins",
    "eslint-plugin-vuejs-accessibility": "catalog:plugins",
    "globals": "catalog:",
    "vue-eslint-parser": "catalog:parsers"
  },
  "devDependencies": {
    "@types/node": "catalog:dev",
    "eslint": "catalog:dev",
    "eslint-typegen": "catalog:dev",
    "nano-staged": "catalog:dev",
    "oxlint": "catalog:dev",
    "simple-git-hooks": "catalog:dev",
    "tsx": "catalog:dev",
    "typescript": "catalog:dev",
    "vitest": "catalog:dev",
    "vue": "catalog:dev"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ],
    "onlyBuiltDependencies": [
      "unrs-resolver"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm oxgen && git add docs/oxlint/UNSUPPORTED-RULES.md && git add .oxlintrc.json && pnpm typegen && git add src/typegen.d.ts && ./node_modules/.bin/nano-staged"
  },
  "nano-staged": {
    "*.{js,ts}": "eslint ."
  }
}
